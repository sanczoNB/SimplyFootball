@model IEnumerable<SimlyFooball.Models.Contract>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
      <th>
        @Html.DisplayNameFor(model => model.StartContractDate)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.EndContractDate)
      </th>
        <th>
            @Html.DisplayNameFor(model => model.Player.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Team.FullName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
      <td>
        @Html.DisplayFor(modelItem => item.StartContractDate)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.EndContractDate)
      </td>
        <td>
            @Html.DisplayFor(modelItem => item.Player.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team.FullName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {item.Id}) |
            @Html.ActionLink("Details", "Details", new { item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { item.Id })
        </td>
    </tr>
}

</table>
